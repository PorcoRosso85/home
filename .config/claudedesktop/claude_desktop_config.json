{
  "mcpServers": {
    "claude_code": {
      "command": "wsl",
      "args": [
        "bash",
        "-c",
        "ALLOWED_TOOLS='[\"GlobTool\", \"Edit\", \"GrepTool\", \"dispatch_agent\", \"LS\", \"Replace\", \"View\"]' claude mcp serve"
      ]
    },
    "llm_functions": {
      "command": "wsl",
      "args": [
        "bash",
        "-c",
        "pnpx mcp-llm-functions /home/nixos/bin/src/aichat_extension"
      ]
    }
  }
}
