{
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(git worktree:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(make:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(gcc:*)",
      "Bash(g++:*)",
      "Bash(cmake:*)",
      "Bash(kuzu:*)",
      "Bash(./bin/*)",
      "Bash(~/bin/*)",
      "WebFetch(domain:*)",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "NotebookRead",
      "NotebookEdit"
    ],
    "deny": [
      "Bash(rm -rf /mnt/*)",
      "Bash(rm -f /mnt/*)",
      "Bash(rm /mnt/*)",
      "Bash(sudo rm*:/mnt/*)",
      "Bash(chmod*:/mnt/*)",
      "Bash(chown*:/mnt/*)",
      "Bash(mkfs*)",
      "Bash(dd:*)",
      "Bash(format:*)",
      "Bash(*:/mnt/c/Windows/*)",
      "Bash(*:/mnt/c/Program Files/*)",
      "Bash(*:/mnt/c/Program Files (x86)/*)",
      "Bash(*:/mnt/*/System32/*)",
      "Bash(*:/mnt/*/SysWOW64/*)",
      "Edit(path:/etc/*)",
      "Write(path:/etc/*)",
      "Edit(path:~/.ssh/*)",
      "Write(path:~/.ssh/*)",
      "Edit(path:/root/*)",
      "Write(path:/root/*)",
      "Edit(path:/mnt/*)",
      "Write(path:/mnt/*)"
    ]
  }
}