# Git configuration - project-local settings required
# Do not set global user.name/user.email here

[pull]
    rebase = false

[init]
    defaultBranch = main

[core]
    pager = delta --side-by-side

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    syntax-theme = gruvbox-dark
    minus-style = syntax "#402020"
    plus-style = syntax "#203020"

[merge]
    conflictstyle = zdiff3
