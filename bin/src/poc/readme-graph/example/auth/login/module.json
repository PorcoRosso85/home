{
  "id": "login-service",
  "path": "/example/auth/login",
  "purpose": "ユーザーログイン処理の実装",
  "type": "service",
  "version": "1.0.0",
  "scope": "login",
  "parent": "../",
  "dependencies": [
    {"id": "auth-system", "version": ">=1.0.0"}
  ],
  "interfaces": {
    "inputs": [
      {
        "name": "username",
        "type": "string",
        "description": "ユーザー名"
      },
      {
        "name": "password",
        "type": "string",
        "description": "パスワード"
      }
    ],
    "outputs": [
      {
        "name": "session",
        "type": "object",
        "description": "セッション情報"
      }
    ]
  },
  "responsibilities": [
    "ユーザー名/パスワード検証",
    "セッション生成",
    "ログイン試行の記録"
  ],
  "constraints": {
    "security": "パスワードはbcryptでハッシュ化",
    "performance": "検証は300ms以内"
  }
}