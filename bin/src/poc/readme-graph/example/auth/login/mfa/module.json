{
  "id": "mfa-component",
  "path": "/example/auth/login/mfa",
  "purpose": "多要素認証の実装",
  "type": "component",
  "version": "1.0.0",
  "scope": "multi-factor-auth",
  "parent": "../",
  "dependencies": [
    {"id": "login-service", "version": ">=1.0.0"}
  ],
  "interfaces": {
    "inputs": [
      {
        "name": "otp_code",
        "type": "string",
        "description": "ワンタイムパスワード"
      },
      {
        "name": "session_id",
        "type": "string",
        "description": "セッションID"
      }
    ],
    "outputs": [
      {
        "name": "verified",
        "type": "boolean",
        "description": "認証成功フラグ"
      }
    ]
  },
  "responsibilities": [
    "OTPコード検証",
    "TOTP/HOTP処理",
    "バックアップコード管理"
  ],
  "constraints": {
    "security": "30秒のタイムウィンドウ",
    "performance": "検証は100ms以内"
  }
}