{
  "id": "oauth-integration",
  "path": "/example/auth/oauth",
  "purpose": "OAuth2.0プロバイダー統合",
  "type": "integration",
  "version": "1.0.0",
  "scope": "oauth-integration",
  "parent": "../",
  "dependencies": [
    {"id": "auth-system", "version": ">=1.0.0"}
  ],
  "interfaces": {
    "inputs": [
      {
        "name": "provider",
        "type": "string",
        "description": "OAuthプロバイダー名"
      },
      {
        "name": "callback_url",
        "type": "string",
        "description": "コールバックURL"
      }
    ],
    "outputs": [
      {
        "name": "access_token",
        "type": "string",
        "description": "アクセストークン"
      }
    ]
  },
  "responsibilities": [
    "OAuth認証フロー管理",
    "トークン交換処理",
    "プロバイダー統合"
  ],
  "constraints": {
    "security": "PKCE使用必須",
    "performance": "トークン交換は1秒以内"
  }
}