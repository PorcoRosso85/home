{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true
  },
  "include": [
    "*.ts",
    "*.mts",
    "*.cts",
    "*.js",
    "*.mjs",
    "*.cjs"
  ]
}