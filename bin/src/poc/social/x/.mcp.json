{
  "projectName": "X.com API POC",
  "description": "X.com (Twitter) Developer API connection proof of concept",
  "version": "1.0.0",
  "responsibilities": [
    "X.com Developer API接続実証",
    "Bearer Token認証の実装",
    "基本的なツイート取得機能",
    "エラーハンドリングのパターン検証"
  ],
  "dependencies": {
    "runtime": "bun",
    "packages": [
      "twitter-api-sdk"
    ]
  },
  "configuration": {
    "authentication": {
      "type": "Bearer Token",
      "source": "X Developer Portal",
      "envVar": "X_BEARER_TOKEN"
    }
  },
  "apiLimits": {
    "free": {
      "reads": "100/month",
      "writes": "500/month"
    }
  },
  "entryPoints": {
    "cli": "bun run src/cli.ts",
    "test": "bun test",
    "e2e": "REAL_API_TEST=true bun test test/e2e/real_api.spec.ts"
  },
  "projectStructure": {
    "src": "TypeScript source code",
    "test": "Test specifications",
    "docs": "Documentation and references"
  }
}