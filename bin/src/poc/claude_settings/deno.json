{
  "tasks": {
    "test": "deno test --allow-all",
    "test:permission": "deno test --allow-all --filter=permission",
    "test:hook": "deno test --allow-all --filter=hook",
    "test:red": "deno test --allow-all || echo 'Expected failures (TDD Red phase)'",
    "mock": "deno run --allow-all ./mock_claude.ts"
  },
  "test": {
    "include": ["*_test.ts"]
  },
  "fmt": {
    "include": ["*.ts", "*.md", "*.json"]
  }
}