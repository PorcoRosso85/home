{
  description = "Organizational flake template with mandatory standards compliance";
  goal = [
    "Provide standardized flake.nix structure for new projects"
    "Enforce mandatory flake-readme dependency integration"
    "Require readme.nix documentation for all projects"
    "Enable template distribution via nix flake init"
    "Present clear validation workflow to developers"
  ];
  nonGoal = [
    "Provide domain-specific functionality"
    "Include application business logic" 
    "Replace existing project architectures"
  ];
  meta = {
    owner = [ "@nixos" ];
    lifecycle = "stable";
    # Organizational requirements
    requirements = {
      mandatoryInputs = [
        "flake-readme - Required for documentation standards"
        "Organization should add: nix-tools, ck-tools per project needs"
      ];
      mandatoryFiles = [
        "readme.nix - Project documentation and goals"
        "flake.nix - Standard structure with required inputs"
      ];
      templateUsage = [
        "nix flake init -t path:/home/nixos/bin/src/poc/new-flake - Initialize from template"
        "Edit readme.nix - Update project description and goals"
        "nix run .#readme-check - Validate documentation"
        "nix flake check - Full validation including readme.nix"
      ];
      validation = [
        "nix run .#readme-check - Documentation validation"
        "nix flake check - Comprehensive validation including readme.nix"
      ];
      ci = {
        recommended = [
          "nix flake check - Full flake validation (includes readme.nix)"
          "nix run .#readme-check - Specific documentation validation"
        ];
        enforcement = [
          "External enforcement via flake-parts modules (future)"
          "CI pipeline integration using nix flake check"
          "Pre-commit hooks for local validation"
        ];
        examples = [
          "GitHub Actions: run 'nix flake check' in CI pipeline"
          "GitLab CI: add nix-based validation stage"
          "Pre-commit: configure readme-check as git hook"
        ];
      };
    };
  };
  output = {
    packages = [ "default" ];
    apps = [ "readme-check" ];
    modules = [ ];
    overlays = [ ];
    devShells = [ ];
    templates = [ "default" ];
  };
}