{
  description = "{{DESCRIPTION}}";

  inputs = {
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    flake-utils.url = "github:numtide/flake-utils";
  };

  outputs = { self, nixpkgs, flake-utils }:
    flake-utils.lib.eachDefaultSystem (system:
      let
        pkgs = nixpkgs.legacyPackages.${system};
      in
      {
        packages.default = pkgs.writeShellScriptBin "{{PROJECT_NAME}}" ''
          echo "{{PROJECT_NAME}} running with secrets from sops"
          echo "API_KEY: $API_KEY"
          echo "DB_PASSWORD: [REDACTED]"
        '';
        
        packages.encrypt-secrets = pkgs.writeShellScriptBin "encrypt-secrets" ''
          ${pkgs.sops}/bin/sops -e -i secrets/app.yaml
        '';
      }) // {
        nixosModules.default = import ./module.nix;
        
        # Template functionality
        templates.default = {
          path = ./template;
          description = "Sops-enabled NixOS application template";
        };
      };
}
