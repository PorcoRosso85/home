# Docker Environment Configuration for Email Archive POC
# Use this file with docker-compose for containerized deployment

# MinIO Root Credentials
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=miniopassword123

# MinIO Configuration
MINIO_SERVER_URL=http://minio:9000
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# Bucket Configuration
BUCKET_NAME=email-archive
BUCKET_REGION=us-east-1

# Health Check Configuration
MINIO_PROMETHEUS_AUTH_TYPE=public

# Security Settings
MINIO_CONSOLE_SECURE_TLS_REDIRECT=off

# Storage Settings
MINIO_VOLUMES=/data

# Performance Settings
MINIO_API_REQUESTS_MAX=1000
MINIO_API_REQUESTS_DEADLINE=10s

# Logging
MINIO_LOGGER_WEBHOOK_ENABLE=off