{
  "$schema": "./data/meta/Requirement.meta.json",
  "$metaSchema": "Requirement",
  "id": "Auth",
  "title": "認証情報構造体",
  "description": "ユーザー認証情報を表す構造体",
  "type": "requirement",
  "implementationType": "struct",
  "outputPath": {
    "default": "/src/auth/Auth.js"
  },
  "implementation": {
    "struct": {
      "properties": {
        "token": {
          "type": "string",
          "description": "認証トークン"
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time",
          "description": "トークンの有効期限"
        },
        "lastAuthenticated": {
          "type": "string",
          "format": "date-time",
          "description": "最後に認証された時刻"
        },
        "refreshToken": {
          "type": "string",
          "description": "リフレッシュトークン"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "トークンのスコープ"
        },
        "permissions": {
          "$ref": "./data/generated/Permission.Struct.schema.json",
          "description": "権限情報"
        }
      },
      "required": ["token", "expiresAt"],
      "methods": {}
    }
  },
  "dependencies": ["Permission.Struct"],
  "tags": ["auth", "security"],
  "status": "draft",
  "priority": "medium",
  "createdAt": "2025-03-23T10:15:00.000Z",
  "updatedAt": "2025-03-23T10:15:00.000Z"
}
