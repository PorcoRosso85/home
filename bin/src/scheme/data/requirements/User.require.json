{
  "$schema": "./data/meta/Requirement.meta.json",
  "$metaSchema": "Requirement",
  "id": "User",
  "title": "ユーザー情報構造体",
  "description": "アプリケーションのユーザーを表す構造体",
  "type": "requirement",
  "implementationType": "struct",
  "outputPath": {
    "default": "/src/user/User.js"
  },
  "implementation": {
    "struct": {
      "properties": {
        "id": {
          "type": "string",
          "description": "ユーザーの一意識別子",
          "format": "uuid"
        },
        "username": {
          "type": "string",
          "description": "ユーザー名（ログイン用）",
          "minLength": 3,
          "maxLength": 30,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "email": {
          "type": "string",
          "description": "メールアドレス",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "表示名（プロフィール用）",
          "minLength": 1,
          "maxLength": 50
        },
        "passwordHash": {
          "type": "string",
          "description": "ハッシュ化されたパスワード"
        },
        "profileImage": {
          "type": "string",
          "description": "プロフィール画像のURL",
          "format": "uri"
        },
        "status": {
          "type": "string",
          "description": "ユーザーのステータス",
          "enum": ["active", "inactive", "suspended", "deleted"]
        },
        "role": {
          "type": "string",
          "description": "ユーザーの権限ロール",
          "enum": ["admin", "moderator", "user", "guest"]
        },
        "preferences": {
          "type": "object",
          "description": "ユーザー設定",
          "properties": {
            "theme": {
              "type": "string",
              "description": "UIテーマ設定",
              "enum": ["light", "dark", "system"]
            },
            "language": {
              "type": "string",
              "description": "表示言語",
              "default": "ja"
            },
            "emailNotifications": {
              "type": "boolean",
              "description": "メール通知の有効/無効",
              "default": true
            },
            "pushNotifications": {
              "type": "boolean",
              "description": "プッシュ通知の有効/無効",
              "default": true
            }
          }
        },
        "lastLogin": {
          "type": "string",
          "description": "最終ログイン日時",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "description": "アカウント作成日時",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "アカウント更新日時",
          "format": "date-time"
        }
      },
      "required": ["id", "username", "email", "passwordHash", "status", "role", "createdAt", "updatedAt"],
      "methods": {}
    }
  },
  "dependencies": [],
  "tags": ["user", "auth", "core", "entity"],
  "status": "draft",
  "priority": "medium",
  "createdAt": "2025-03-22T05:56:38.752Z",
  "updatedAt": "2025-03-22T05:56:38.752Z"
}