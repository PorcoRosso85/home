{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "共通メタデータスキーマ",
  "description": "ノード・エッジ・グラフ共通のメタデータを定義",
  
  "definitions": {
    "status": {
      "type": "string",
      "enum": ["計画中", "開発中", "テスト中", "完了", "廃止予定", "再設計中"]
    },
    
    "complexity": {
      "type": "string",
      "enum": ["低", "中", "高"]
    },
    
    "uri": {
      "type": "object",
      "required": ["protocol", "path"],
      "properties": {
        "protocol": {
          "type": "string",
          "enum": ["file", "http", "https", "git", "ssh", "ftp", "sftp", "s3", "azure", "gcp", "mongodb", "postgresql", "mysql", "redis", "ldap", "mailto", "tel", "data"]
        },
        "path": { "type": "string" },
        "parameters": {
          "type": "object",
          "properties": {
            "branch": { "type": "string" },
            "version": { "type": "string" },
            "template": { "type": "string" },
            "port": { "type": "integer" },
            "host": { "type": "string" },
            "query": { "type": "string" },
            "fragment": { "type": "string" },
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "additionalProperties": true
        }
      }
    },
    
    "implementation": {
      "type": "object",
      "properties": {
        "status": { "$ref": "#/definitions/status" },
        "progress": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "完了度を0-100%で表現"
        },
        "assignee": {
          "type": "string",
          "description": "担当者ID"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "location": { "$ref": "#/definitions/uri" }
      },
      "required": ["status", "progress"]
    },
    
    "documentation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["documentation", "specification", "implementation", "test", "example", "other"]
          },
          "url": { "type": "string", "format": "uri" },
          "title": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["type", "url", "title"]
      }
    },
    
    "metadata": {
      "type": "object",
      "properties": {
        "implementation": { "$ref": "#/definitions/implementation" },
        "documentation": { "$ref": "#/definitions/documentation" },
        "complexity": { "$ref": "#/definitions/complexity" },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}