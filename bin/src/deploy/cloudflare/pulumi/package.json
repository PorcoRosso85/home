{
    "name": "cloudflare-deployment",
    "version": "1.0.0",
    "description": "Cloudflare deployment management using Pulumi TypeScript",
    "main": "index.ts",
    "scripts": {
        "build": "tsc",
        "preview": "./pulumi-safe.sh dev preview",
        "preview:stg": "./pulumi-safe.sh stg preview",
        "preview:prod": "./pulumi-safe.sh prod preview",
        "validate": "./pulumi-safe.sh dev validate",
        "validate:stg": "./pulumi-safe.sh stg validate",
        "validate:prod": "./pulumi-safe.sh prod validate",
        "up": "./pulumi-safe.sh dev up",
        "up:stg": "./pulumi-safe.sh stg up",
        "up:prod": "./pulumi-safe.sh prod up",
        "destroy": "./pulumi-safe.sh dev destroy",
        "destroy:stg": "./pulumi-safe.sh stg destroy",
        "destroy:prod": "./pulumi-safe.sh prod destroy",
        "config": "./pulumi-safe.sh dev config",
        "config:stg": "./pulumi-safe.sh stg config",
        "config:prod": "./pulumi-safe.sh prod config"
    },
    "devDependencies": {
        "@types/node": "^20",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@pulumi/pulumi": "^3.0.0",
        "@pulumi/cloudflare": "^5.0.0"
    }
}