# Cloudflare Resource Configuration (SOT)
# Environment: prod
version: "1.0"

r2:
  buckets:
    - name: "my-app-prod-storage"
      binding: "R2_BUCKET"

workers:
  - name: "my-app-prod-worker"
    script: "src/worker.ts"
    bindings:
      r2:
        - bucket: "my-app-prod-storage"
          binding: "R2_BUCKET"

# Note: This is a template. Copy to cloudflare.yaml and encrypt with SOPS