@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex: <http://example.org/> .

# Function型の制約
ex:FunctionShape
    a sh:NodeShape ;
    sh:targetClass ex:Function ;
    sh:property [
        sh:path ex:title ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:message "関数には必ずtitleプロパティが必要です" ;
    ] ;
    sh:property [
        sh:path ex:type ;
        sh:datatype xsd:string ;
        sh:hasValue "function" ;
        sh:minCount 1 ;
        sh:message "関数には必ずtypeプロパティが必要で、値は'function'である必要があります" ;
    ] ;
    sh:property [
        sh:path ex:description ;
        sh:datatype xsd:string ;
        sh:message "関数の説明を記述するdescriptionプロパティは省略可能です" ;
    ] ;
    sh:property [
        sh:path ex:pure ;
        sh:datatype xsd:boolean ;
        sh:message "pureプロパティはboolean型である必要があります" ;
    ] ;
    sh:property [
        sh:path ex:async ;
        sh:datatype xsd:boolean ;
        sh:message "asyncプロパティはboolean型である必要があります" ;
    ] .
