{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metaSchema": "Function",
  "title": "FilterFunction",
  "description": "配列の各要素に対して条件関数を適用し、条件に合致する要素のみの新しい配列を生成する高階関数",
  "type": "function",
  "parameters": {
    "type": "object",
    "properties": {
      "array": {
        "type": "array",
        "description": "処理対象の配列",
        "required": true
      },
      "predicate": {
        "type": "function",
        "description": "フィルタ条件を表す関数",
        "required": true
      }
    },
    "required": ["array", "predicate"]
  },
  "returnType": {
    "type": "array",
    "description": "条件に合致した要素のみを含む新しい配列"
  },
  "pure": true,
  "async": false,
  "examples": [
    {
      "description": "数値配列から偶数のみを抽出する",
      "input": {
        "array": [1, 2, 3, 4, 5, 6],
        "predicate": "x => x % 2 === 0"
      },
      "output": [2, 4, 6]
    }
  ]
}
