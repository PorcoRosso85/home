# Cypherクエリの制約
ex:CypherQueryShape
    a sh:NodeShape ;
    sh:targetClass ex:CypherQuery ;
    sh:property [
        sh:path ex:queryString ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:message "クエリ文字列は必須です。" ;
    ] ;
    sh:property [
        sh:path ex:hasOperation ;
        sh:message "サポートされているクエリ操作は MATCH, CREATE, SET, DELETE, MERGE です。" ;
    ] .

# IDプロパティの型制約
ex:IdPropertyShape
    a sh:PropertyShape ;
    sh:path ex:id ;
    sh:datatype xsd:string ;
    sh:message "idプロパティは文字列型(STRING)である必要があります。INT型は使用できません。" .

