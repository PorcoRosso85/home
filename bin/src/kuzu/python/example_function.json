{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metaSchema": "Function",
  "title": "MapFunction",
  "description": "配列の各要素に対して関数を適用し、新しい配列を生成する高階関数",
  "type": "function",
  "parameters": {
    "type": "object",
    "properties": {
      "array": {
        "type": "array",
        "description": "処理対象の配列",
        "required": true
      },
      "callback": {
        "type": "function",
        "description": "各要素に適用する関数",
        "required": true
      }
    },
    "required": ["array", "callback"]
  },
  "returnType": {
    "type": "array",
    "description": "コールバック関数が適用された結果の新しい配列"
  },
  "pure": true,
  "async": false,
  "examples": [
    {
      "description": "数値配列の各要素を2倍にする",
      "input": {
        "array": [1, 2, 3, 4],
        "callback": "x => x * 2"
      },
      "output": [2, 4, 6, 8]
    }
  ]
}
